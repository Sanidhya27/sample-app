<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#ffffcc">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.sanidhyagarg.myapplication.MainActivity">

    <TextView
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Money"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:background="#FD8E09"/>
    <TextView
        android:id="@+id/spent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Money Spent"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:background="#379237"/>
    <TextView
        android:id="@+id/addpassbook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Added Money Details"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:background="#8800A0"/>
    <TextView
        android:id="@+id/spentpassbook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spent Details"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:background="#8800A0"/>

    <TextView
        android:id="@+id/displaybalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Balance"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:background="#4400A0"/>

    <ImageView
        android:layout_width="117dp"
        android:layout_height="119dp"
        android:src="@drawable/add"/>

</LinearLayout>
</ScrollView>
